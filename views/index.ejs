<% include partials/header %>

<style>
    .main {
        height: 400px;
        white-space: nowrap;
    }

    .main>div {
        display: inline-block;
        width: 50%;
        height: 100%;
        vertical-align: top;
    }
    
    #main-img {
        background-image: url("/person.png");
        background-position-x: 25px;
        border-top-left-radius: 50px;
        border-bottom-left-radius: 50px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    #main-info {
        background-color: #ececec;
    }
    #main-info .heading {
        padding-top: 30px;
        font-size: 25px;
        text-align: center;
    }
    #main-info .list {
        padding-top: 20px;
        padding-right: 10px;
    }
    #main-info .list.right * {
        text-align: right;
    }
    #main-info .list .heading {
        padding-top: 20px;
        padding-bottom: 10px;
    }
    #main-info .list .item {
        position: relative;
        margin-right: 10px;
    }
    #main-info .list .item:after {
        content: "-";
        position: absolute;
        right: -10px;
    }
</style>

<div class="main">
    <div id="main-img" title="Gregor Kaljulaid, drawn by Hendrik Kuhi" alt="Gregor Kaljulaid, drawn by Hendrik Kuhi"></div>
    <div id="main-info">
        <div class="heading">Gregor Kaljulaid</div>
        <div class="list right">
            <div class="heading">Systems</div>
            <div class="item">Windows</div>
            <div class="item">Linux</div>
            <div class="heading">Web</div>
            <div class="item">HTML/CSS/JS</div>
            <div class="item">Node.JS</div>
            <div class="item">MongoDB</div>
            <div class="item">Browser extensions</div>
        </div>
    </div>
</div>

<script type="text/javascript">
    window.addEventListener("load", function(){
        document.querySelector("a[href='/']").parentElement.classList.add("active");
    });
</script>


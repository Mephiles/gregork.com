<% include partials/header %>

<style>
    .main {
        height: 400px;
        white-space: nowrap;
    }

    .main>div {
        display: inline-block;
        width: 50%;
        height: 100%;
        vertical-align: top;
    }
    
    #main-img {
        background-image: url("/person.png");
        background-position-x: 25px;
        border-top-left-radius: 50px;
        border-bottom-left-radius: 50px;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    #main-info {
        background-color: #ececec;
    }
    #main-info .heading {
        padding-top: 30px;
        font-size: 25px;
        text-align: center;
    }
    #main-info .heading-note {
        text-align: center;
        font-size: 15px;
        color: gray;
    }
    #main-info .list {
        padding-top: 20px;
        padding-right: 10px;
    }
    #main-info .list.right * {
        text-align: right;
    }
    #main-info .list .heading {
        padding-top: 20px;
        padding-bottom: 10px;
    }
    #main-info .list .item {
        position: relative;
        margin-right: 10px;
    }
    #main-info .list .item:after {
        content: "-";
        position: absolute;
        right: -10px;
    }
    #main-info .footer {
        margin-top: 25px;
        width: 100%;
        text-align: center;
    }
    #main-info .footer a {
        color: blue;
    }

    @media screen and (max-width: 600px){
        body {
            padding-bottom: 500px !important;
        }
        .main>div {
            width: 100% !important;
            display: block !important;
        }
        #main-img {
            background-position-x: 50px !important;
        }
        #main-info * {
            text-align: center !important;
        }
        #main-info>.heading {
            font-size: 29px !important;
            font-weight: 600 !important;
        }
        #main-info .right .heading {
            font-size: 29px !important;
        }
        #main-info .item {
            font-size: 20px !important;
        }
        #main-info .item:after {
            content: unset !important;
        }
        #main-info .list.right {
            padding: 0 !important;
        }
    }
    @media screen and (max-width: 450px) {
        #main-img {
            background-position-x: 0px !important;
        }
    }
</style>

<div class="main">
    <div id="main-img" title="Gregor Kaljulaid, drawn by Hendrik Kuhi" alt="Gregor Kaljulaid, drawn by Hendrik Kuhi"></div>
    <div id="main-info">
        <div class="heading">Gregor Kaljulaid</div>
        <div class="heading-note">Software Developer</div>
        <div class="list right">
            <div class="heading">Systems</div>
            <div class="item">Windows</div>
            <div class="item">Linux</div>
            <div class="heading">Web</div>
            <div class="item">HTML/CSS/JS</div>
            <div class="item">Node.JS</div>
            <div class="item">MongoDB</div>
            <div class="item">Browser extensions</div>
        </div>
        <div class="footer"><a href="/CV_eng.docx">CV Eng</a>&nbsp;-&nbsp;<a href="/CV_est.docx">CV Est</a></div>
    </div>
</div>

<script type="text/javascript">
    window.addEventListener("load", function(){
        document.querySelector("a[href='/']").parentElement.classList.add("active");
    });
</script>


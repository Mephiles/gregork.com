<% include partials/header%>

<style>
    .main {
        display: flex;
        flex-wrap: wrap;
        flex-flow: row;
        padding: 20px;
    }
    .main>.item {
        width: 250px;
        height: 270px;
        margin-right: 50px;
        border: 1px solid lightgray;
        padding: 10px;
        box-sizing: border-box;
        cursor: pointer;
    }
    .main>.item a {
        width: inherit;
        height: inherit;
    }

    .main>.item .heading {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 10px;
        text-align: center;
    }

    .main>.item .info {
        margin-bottom: 60px;
    }
    .main>.item .info>.item {
        font-size: 14px;
    }
    .main>.item .description {
        text-align: center;
    }
</style>

<div class="main">
    <div class="item" name="torntools">
        <div class="heading">TornTools</div>
        <div class="info">
            <div class="item">Type: Browser extension</div>
            <div class="item">Started: 15th of Dec, 2018</div>
            <div class="item">Status: In progress</div>
        </div>
        <div class="description">A browser extension (Chrome & Firefox) for an online text-based role-playing game, Torn.</div>
    </div>
    <div class="item" name="torntravel">
        <div class="heading">Torn Travel</div>
        <div class="info">
            <div class="item">Type: Discord bot</div>
            <div class="item">Started: 4th of June, 2020</div>
            <div class="item">Status: In progress</div>
        </div>
        <div class="description">A bot for discord users to fetch info about Torn.</div>
    </div>
    <div class="item" name="personalwebsite">
        <div class="heading">Personal website</div>
        <div class="info">
            <div class="item">Type: Node.js website</div>
            <div class="item">Started: 6th of June, 2020</div>
            <div class="item">Status: In progress</div>
        </div>
        <div class="description">A personal website to list my projects, education, etc.</div>
    </div>
</div>

<script type="text/javascript">
    window.addEventListener("load", function(){
        document.querySelector("a[href='/projects']").parentElement.classList.add("active");

        for(let item of document.querySelectorAll(".main>.item")){
            item.addEventListener("click", function(event){
                let name = event.target.getAttribute("name") || findParent(event.target, {class: "item"}).getAttribute("name");
                window.location.href = "/projects/"+name;
            });
        }
    });
</script>

